using namespace std;
int main() {
    int T,n,k;
    scanf("%d",&T);
    while(T)
    {
        scanf("%d %d",&n,&k);
        float x;
        if(k!=0){ x =k*n;
                 k--;
                 x= ceil(x/k);
                 x--;
                 int y=int(x);
                 printf("%d\n",y);
        }
        T--;
    }
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    return 0;
}
